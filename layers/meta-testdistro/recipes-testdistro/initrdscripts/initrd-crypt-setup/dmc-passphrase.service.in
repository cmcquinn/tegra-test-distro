[Unit]
Description=Unseal dm-crypt passphrase
DefaultDependencies=no
RequiresMountsFor=/run
Before=cryptsetup-pre.target
ConditionPathExists=!/run/crypt/passphrase

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=@BASE_BINDIR@/mkdir -p -m 0700 /run/crypt
ExecStart=@BASE_BINDIR@/sh -c "@SBINDIR@/luks-srv-app --get-unique-pass --context-string=DMCPP > /run/crypt/passphrase"

[Install]
WantedBy=cryptsetup-pre.target
